
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/connectfsq"
        android:src="@drawable/fsqlogin"
        android:background="#0000"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:onClick="onFoursquareConnectButtonClicked"
        android:text="" />

    <ImageButton
        android:id="@+id/connectlnkdin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#0000"
        android:onClick="onLinkedInConnectButtonClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/lnkdinlogin"
        android:text="" />
    
    <ImageButton
        android:id="@+id/connecttwitter"
        android:src="@drawable/twitterlogin"
        android:background="#0000"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:onClick="onTwitterConnectButtonClicked"
        android:text="" />
    
</LinearLayout>
